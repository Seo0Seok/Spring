<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.JoinMapper">	
	
	<select id="selectJoinList" parameterType="hashmap" resultType="int">	
		SELECT
			count(*)
		FROM
			t2_account
		WHERE 
			u_id = #{id} 
	</select>
	
	<select id="selectJoinList" parameterType="hashmap" resultType="int">	
		SELECT
			count(*)
		FROM
			t2_account
		WHERE 
			u_nickname = #{nickname} 
	</select>
	
	<select id="selectJoinList" parameterType="hashmap" resultType="int">	
		SELECT
			count(*)
		FROM
			t2_account
		WHERE 
			u_email = #{email} 
	</select>
	

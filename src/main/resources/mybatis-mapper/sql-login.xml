<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.LoginMapper">	
	<select id="selectLoginList" parameterType="hashmap" resultType="com.example.demo.model.Login">	
		SELECT
			u_id, u_password, u_name
		FROM
			t2_account
		WHERE 
			u_id = #{id} AND u_password = #{password} 
			<!-- 앞에 u_id는 실제 DB 컬럼명, {}안에는 MAP에 있는애랑 맞춰줌-->>
	</select>
</mapper>